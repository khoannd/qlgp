<script type="text/javascript">
    $(function () {
        $('#createTCLMModal').find('.modal-dialog.modal-lg').css('width', '95%');

        $('.fdate-picker').datepicker({
            autoclose: true,
            todayHighlight: true,
            forceParse: false,

        }).next().on(ace.click_event, function () {
            $(this).prev().focus();
        });
    });


    $('.time-picker').timepicker({
        'step': 15
    });


    InitDatatable();

    function InitDatatable() {
        $("#GiayMoiTable").dataTable({
            "bRetrieve": true,
            "bServerSide": true,
            "bScrollCollapse": true,
            "sAjaxSource": "/GiayMoi/LoadGiayMoiDatatable",
            //"bProcessing": true,
            "oLanguage": {
                "sSearch": "Tên giấy mời",
                "sZeroRecords": "Không có dữ liệu phù hợp",
                "sInfo": "Hiển thị từ _START_ đến _END_ trên tổng số _TOTAL_ dòng",
                "sEmptyTable": "Không có dữ liệu",
                "sInfoFiltered": " - lọc ra từ _MAX_ dòng",
                "sLengthMenu": "Hiển thị _MENU_ dòng",
                "sProcessing": "Đang xử lý...",
                "sInfoEmpty": "",
                "oPaginate": {
                    "sPrevious": "Trước",
                    "sNext": "Sau"
                }
            },
            "aoColumnDefs": [
                {
                    "aTargets": [0],
                    "bVisible": false,
                },

                {
                    "aTargets": [6],
                    "render": function (data, type, full, meta) {
                        var content = '<button class="btn btn-minier btn-primary" onclick="LoadGiayMoiByGiayMoitId(' + data + ')"><i class="ace-icon fa fa-pencil"></i>Sửa</button>' +
                            '<button class="btn btn-minier btn-danger" onclick="DeleteConfirm(' + data + ')">' + '<i class="ace-icon fa fa-trash-o"></i>Xóa</button>';
                        return content;
                    },
                    "bSortable": false,
                    "sWidth": "15%"
                }
            ],
            "bAutoWidth": false,
        });

    }
    //su kien button
    $("#btnCreateGiayMoi").click(function () {
        clearGiayMoi();
        $("#GiayMoiModalTitle").html("Thêm giấy mời");
        $("#createGiayMoiModal").modal('show');
        $("#btnGiayMoiModal").show();
        $("#btnUpdateGiayMoiModal").hide();
        $("#btnHoanTatGiayMoiModal").hide();
    });
    $("#createGiayMoiModal").on("hidden.bs.modal", function () {
        clearGiayMoi();
    });

    $("#btnLookupKhachMoiModal").click(function () {
        //clearKhachMoi();
        if (!CheckValidGiayMoi()) {
            return;
        }

        $("#KhachMoiModalTitle").html("Thêm khách mời");
        $("#KhachMoiModal").modal('show');
        $("#btnCreateKhachMoiModal").show();
        $("#btnUpdateKhachMoiModal").hide();

    });

    $("#btnCloseGiayMoiModal").click(function () {
        $("#createGiayMoiModal").modal('hide');
    });

    $("#btnHoanTatGiayMoiModal").click(function () {
        $("#createGiayMoiModal").modal('hide');
    });

    $("#btnCloseKhachMoiModal").click(function () {
        $("#KhachMoiModal").modal('hide');
        clearKhachMoi();
    });


    $('#txtTemplate').ace_wysiwyg().prev().addClass('wysiwyg-style1');

    $("#btn1").click(function () {
        $("#txtTemplate").slideToggle('slow');
    });


    //change combo box
    $("#MauGiayMoi").change(function () {
        $.get("/GiayMoi/GetTemplateContent", { id: $("#MauGiayMoi option:selected").val() }, function (data) {
            $("#txtTemplate").html(data);
        });
    });

    //delete giay moi confirm
    function DeleteConfirm(id) {
        bootbox.dialog({
            closeButton: false,
            message: "Bạn có chắc muốn xóa giấy mời không?",
            title: "Xác nhận",
            buttons: {
                danger: {
                    label: " Xóa",
                    className: "ace-icon fa fa-trash-o btn-danger",
                    callback: function () {
                        DeleteGiayMoi(id);
                    }
                },
                main: {
                    label: " Đóng",
                    className: "ace-icon fa fa-times btn-default",

                    callback: function () {
                    }
                }
            }
        });
    }

    //delete khach moi confirm
    function DeleteKhachMoiConfirm(id) {
        bootbox.dialog({
            closeButton: false,
            message: "Bạn có chắc muốn xóa khách mời không?",
            title: "Xác nhận",
            buttons: {
                danger: {
                    label: " Xóa",
                    className: "ace-icon fa fa-trash-o btn-danger",
                    callback: function () {
                        DeleteKhachMoi(id);
                    }
                },
                main: {
                    label: " Đóng",
                    className: "ace-icon fa fa-times btn-default",

                    callback: function () {
                    }
                }
            }
        });
    }
    //delete giay moi
    function DeleteGiayMoi(id) {
        $.ajax({
            url: "/GiayMoi/DeleteGiayMoi",
            type: "POST",
            data: { id: id },
            success: function (data) {

                if (data.result <= 0) {
                    showMessage("Vui lòng xóa khách mời", 0);
                } else {
                    showMessage("Xóa giấy mời thành công", 1);
                    refreshGiayMoiTable();
                }

            },
        });
    }

    //delete khach moi
    function DeleteKhachMoi(id) {
        $.ajax({
            url: "/GiayMoi/DeleteKhachMoi",
            type: "POST",
            data: { id: id },
            success: function (data) {

                if (data.result <= 0) {
                    showMessage("Xóa khách mời thất bại", 0);
                } else {
                    showMessage("Xóa khách thành công", 1);
                    refreshKhachMoiTable();
                }

            },
        });
    }

    //Clear giay moi popup
    function clearGiayMoi() {
        $("#TenGiayMoi").val("");
        $("#lbTenGiayMoiErrorMessage").val("");
        $("#lbTenGiayMoiErrorMessage").hide();

        $("#Id").val("");

        $("#LoaiGiayMoi").val('0');
        $("#lbLoaiGiayMoiErrorMessage").val("");
        $("#lbLoaiGiayMoiErrorMessage").hide();


        $("#NgayMoi").val("");
        $("#lbNgayMoiErrorMessage").hide();
        $("#lbNgayMoiErrorMessage").val("");


        $("#NgayDienRa").val("");
        $("#lbNgayDienRaErrorMessage").val("");
        $("#lbNgayDienRaErrorMessage").hide();


        $("#lbDiaDiemErrorMessage").val("");
        $("#lbDiaDiemErrorMessage").hide();
        $("#DiaDiem").val("");

        $("#NguoiGoi").val($("#bishopName").val());
        $("#lbNguoiGoiErrorMessage").val("");
        $("#lbNguoiGoiErrorMessage").hide();


        $("#MauGiayMoi").val('0');
        $("#lbMauGiayMoiErrorMessage").val("");
