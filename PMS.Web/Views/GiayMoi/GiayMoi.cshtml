                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <div class="col-sm-12">
                                    <button id="btnLookupKhachMoiModal" class="btn btn-primary btn-sm" data-toggle="modal">
                                        <i class="ace-icon fa fa-plus-circle"></i> Thêm khách mời
                                    </button>
                                    <button class="btn btn-success btn-sm" data-toggle="modal" onclick="printAppointmentAll()">
                                        <i class=" ace-icon fa fa-print">
                                        </i> In giấy mời
                                    </button>

                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="space-6"></div>
                    <div class="form-group">
                        <div class="row" id="hiddenKhachMoiTableModal">
                            <div class="col-xs-12">
                                <table id="KhachMoiTable" class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th hidden=""></th>
                                            <th>
                                                <label class="position-relative">
