    var priestId;
    function initPriestAutocomplete(element, isForce) {

        var input = $(element).autocomplete({
            autoFocus: !isForce,
            source: function (request, response) {
                $.ajax({
                    url: "/Dioceseioner/LoadPriest",
                    dataType: "json",
                    data: {
                        name: request.term
                    },
                    success: function (data) {
                        //response(data.result);
                        //data = JSON.parse(data.result);
                        response($.map(JSON.parse(data.result), function (item) {
                            return {
                                label: item.Priest,
                                value: item.PriestId
                            }
                        }));
                    }
                });
            },
            focus: function (event, ui) {
                //if (isForce) {
                //    $(element).val(ui.item.label);
                //    return false;
                //}
                $(element).val(ui.item.label);
                priestId = ui.item.value;
            },
            select: function (event, ui) {
                //if (isForce) {                    
                //    $(this).data("uiItem", ui.item.label);
                //    $(element).val(ui.item.label);
                //    return false;
                //}
                $(this).data("uiItem", ui.item.label);
                $(element).val(ui.item.label);
                priestId = ui.item.value;
                return false;
            },
