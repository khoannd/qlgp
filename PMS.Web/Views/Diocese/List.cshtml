    function checkValidate() {
        var isError = false;
        var code = $("#dioceseCodeModal").val();
        if (!code) {
            $("#dioceseCodeModalValidate").html("Mã giáo phận không thể để trống. Vui lòng nhập mã giáo phận!");
            $("#dioceseCodeModalValidate").show();
            isError = true;
        } else {
            $("#dioceseCodeModalValidate").html("");
            $("#dioceseCodeModalValidate").hide();
        }
        
        var name = $("#dioceseNameModal").val();
        if (!name) {
            $("#dioceseNameValidate").html("Tên giáo phận không thể để trống. Vui lòng nhập tên giáo phận!");
            $("#dioceseNameValidate").show();
            isError = true;
        } else {
            $("#dioceseNameValidate").html("");
            $("#dioceseNameValidate").hide();
        }

        if (!validateUnique()) {
            isError = true;
        }

        var website = $("#dioceseWebsiteModal").val();
        if (website) {
            if (!validateUrl(website)) {
                $("#dioceseWebsiteValidate").html("Website không đúng định dạng (Ví dụ: www.pms.com)");
                $("#dioceseWebsiteValidate").show();
                isError = true;
            } else {
                $("#dioceseWebsiteValidate").html("");
                $("#dioceseWebsiteValidate").hide();
            }
        } 

        var email = $("#dioceseEmailModal").val();
        if (email) {
            if (!validateEmail(email)) {
                $("#dioceseEmailValidate").html("Email không đúng định dạng (Ví dụ: pms@@gmail.com)");
                $("#dioceseEmailValidate").show();
                isError = true;
            } else {
                $("#dioceseEmailValidate").html("");
                $("#dioceseEmailValidate").hide();
                
            }
        } 

        if (isError) {
            return false;
        }

        return true;

    }

    function validateUnique() {


        var dioceseId = $("#dioceseId").val();
        var name = $("#dioceseNameModal").val();
        var code = $("#dioceseCodeModal").val();
        var result = true;

        $.ajax({
            url: "/Diocese/CheckUniqueDiocese",
            type: "POST",
            data: {
                id: dioceseId,
                code: code,
                name: name,
            },
            async: false,
            success: function (data) {
                if (data.result <= 0) {
                    $("#dioceseNameValidate").html("Tên giáo phận đã tồn tại. Vui lòng nhập tên khác!");
                    $("#dioceseNameValidate").show();
                    result = false;
                } else {
                    if (!name) {
                        return true;
                    }
                    $("#dioceseNameValidate").html("");
                    $("#dioceseNameValidate").hide();
                    result = true;
                }

            }
        });

        return result;
    }

