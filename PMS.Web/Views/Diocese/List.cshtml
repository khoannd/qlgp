    }

    function AddDiocese(url) {
        if (!checkValidate()) {
            return;
        }
        var code = $("#dioceseCodeModal").val();
        var name = $("#dioceseNameModal").val();
        var address = $("#dioceseAddressModal").val();
        var website = $("#dioceseWebsiteModal").val();
        var phone = $("#diocesePhoneModal").val();
        var email = $("#dioceseEmailModal").val();
        var church = $("#dioceseChurchModal").val();
        var bishop = $("#dioceseBishopModal").val();
        var imageUrl = url;
        startLoading();
        $.ajax({
            url: "/Diocese/Add",
            type: "POST",
            data: {
                Code: code,
                Name: name,
                Address: address,
                Website: website,
                Phone: phone,
                Email: email,
                Church: church,
                Bishop: bishop,
                ImageUrl: imageUrl
            },
            success: function (data) {
                if (data <= 0) {
                    showMessage("Thêm giáo phận thất bại", 0);
                } else {
                    showMessage("Thêm giáo phận thành công", 1);
                    $("#createDioceseModal").modal('hide');
                    refeshTable();
                    ClearDiocese();
                }
            },
        });
    }

    function UpdateDiocese(url) {
        if (!checkValidate()) {
            return;
        }
        var id = $("#dioceseId").val();
        var name = $("#dioceseNameModal").val();
        var code = $("#dioceseCodeModal").val();
        var address = $("#dioceseAddressModal").val();
        var church = $("#dioceseChurchModal").val();
        var website = $("#dioceseWebsiteModal").val();
        var phone = $("#diocesePhoneModal").val();
        var email = $("#dioceseEmailModal").val();
        var bishop = $("#dioceseBishopModal").val();
        var imageUrl = url;
        startLoading();
        $.ajax({
            url: "/Diocese/Update",
            type: "POST",
            data: {
                Id: id,
                Code: code,
                Name: name,
                Address: address,
                Website: website,
                Phone: phone,
                Email: email,
                Church: church,
                ImageUrl: imageUrl,
                Bishop: bishop
            },
            success: function (data) {

                if (data.result <= 0) {
                    showMessage("Cập nhật thất bại", 0);
                } else {
                    showMessage("Cập nhật thông tin giáo phận thành công", 1);
                    $("#createDioceseModal").modal('hide');
                    refeshTable();
                    ClearDiocese();
                }
            },
        });
    }

    function LoadDataModal(id) {
        $("#dioceseId").val(id);
        $.ajax({
            url: "/Diocese/LoadDioceseById",
            type: "POST",
            data: { id: id },
            success: function (data) {


                var item = data.def;
                $("#dioceseNameModal").val(item.Name);
                $("#dioceseAddressModal").val(item.Address);
                $("#dioceseCodeModal").val(item.Code);
                $("#dioceseChurchModal").val(item.Church);
                $("#dioceseBishopModal").val(item.Bishop);
                $("#dioceseWebsiteModal").val(item.Website);
                $("#diocesePhoneModal").val(item.Phone);
                $("#dioceseEmailModal").val(item.Email);
                $("#dioceseImageModal").attr('src', item.ImageUrl);;

                if (!item.ImageUrl) {
                    $("#dioceseModalImage1").hide();
                } else {
                    $("#dioceseModalImage1").show();
                }
                $("#dioceseModalTitle").html("Chỉnh sửa giáo phận");

                $("#createDioceseModal").modal('show');
                $("#btnUpdateDioceseModal").show();
                $("#btnCreateDioceseModal").hide();


            },
        });
    }
