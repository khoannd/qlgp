    function checkValidate() {
        var isError = false;

        var vicariate = $("#modalVicariate").val();
        if (vicariate == 0) {
            $("#lbVicariateErrorModal").html("Vui lòng chọn giáo hạt cho giáo xứ!");
            $("#lbVicariateErrorModal").show();
            isError = true;
        } else {
            $("#lbVicariateErrorModal").html("");
            $("#lbVicariateErrorModal").hide();
        }

        var name = $("#parishNameModal").val();
        if (!name) {
            $("#parishNameValidate").html("Tên giáo xứ không thể để trống. Vui lòng nhập tên giáo xứ!");
            $("#parishNameValidate").show();
            isError = true;
        } else {
            $("#parishNameValidate").html("");
            $("#parishNameValidate").hide();
        }

        if (!validateUnique()) {
            isError = true;
        }

        var website = $("#parishWebsiteModal").val();
        if (website) {
            if (!validateUrl(website)) {
                $("#parishWebsiteValidate").html("Website không đúng định dạng (Ví dụ: www.pms.com)");
                $("#parishWebsiteValidate").show();
                isError = true;
