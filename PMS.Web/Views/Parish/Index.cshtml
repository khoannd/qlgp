@using PMS.DataAccess.Models;
<link rel="stylesheet" href="/Content/assets/css/chosen.css" />
<input type="hidden" id="vicariateId" />
<div class="page-header">
    <h1>Danh sách giáo xứ</h1>
</div>
<div class="page-header">
    <div class="row">
        <div class="col-xs-3" @if (!account.IsDioceseRole(roleId)) { Html.Raw(" hidden='hidden'"); }>
            Giáo phận
            <select id="cbbDiocese" class="form-control" style="width: 250px;">
                <option value="0">Tất cả</option>
                @foreach (var item in ((List<Diocese>)ViewBag.Dioceses))
                {
                    <option value="@item.Id" @if (item.Id.ToString() == Session["DioceseId"].ToString()) { @Html.Raw("selected");}>@item.Name</option>
                }
            </select>
        </div>
        <div class="col-xs-3">
            Giáo hạt
            <select class="form-control" id="cbbVicariate" style="width: 250px;">
                <option value="0">Tất cả</option>
                @foreach (var item in ((List<Vicariate>)ViewBag.Vicariates))
                {
                    <option value="@item.Id" dioceseId="@Html.Raw(item.DioceseId)" @if ((int)Session["DioceseId"] != item.DioceseId) { @Html.Raw(" style='display:none;'"); }>@item.Name</option>
                }
            </select>
        </div>
    </div>

</div>
<div class="row">
    <div class="space-4"></div>
    <div class="col-xs-12">
        <div class="col-sm-12">
            <button id="btnCreateParish" class="btn btn-success" data-toggle="modal">
                <i class="ace-icon fa fa-plus"></i> Thêm giáo xứ
            </button>
        </div>
    </div>
</div>


