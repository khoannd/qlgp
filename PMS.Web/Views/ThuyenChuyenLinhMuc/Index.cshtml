    function updateValue(id, columnName, cmb) {
        var value = cmb.value;        
        if (value == 0 || value == '') {
            if (columnName == 'Position') {
                showMessage("Hãy chọn vai trò cho Linh mục", -1);
            }
            else if (columnName == 'ParishId') {
                showMessage("Hãy chọn giáo xứ cho Linh mục", -1);
            }
            var currentValue = $(cmb).attr('currentValue');
            cmb.value = currentValue;
            return;
        }
        startLoading();
        $.ajax({
            url: "/ThuyenChuyenLinhMuc/UpdateValue",
            type: "POST",
            data: {
                id: id,
                columnName: columnName,
                value: value
            },
            success: function (data) {
                if (data.result <= 0) {                    
                    if (data.result == -3) {
                        showMessage("Giáo xứ bạn đang định thuyên chuyển đã có Chánh xứ", -1);
                    }
                    else if (data.result == -2) {
                        showMessage("Giáo xứ bạn sắp được thuyên chuyển đã có Chánh xứ", -1);
                    }
                    else {
                        showMessage("Cập nhật thông tin linh mục thất bại", 0);
                    }
                    //reset value
                    var currentValue = $(cmb).attr('currentValue');
                    cmb.value = currentValue;
                }
                else {
                    showMessage("Cập nhật thông tin linh mục thành công", 1);
                    if (columnName == 'ParishId') {
                        LoadTCLMById(idTCLM);
                    }                    
                }                
            },

        });
    }

