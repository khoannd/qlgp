<script>
    var idTCLM;
    $(function () {        
        $('#createTCLMModal').find('.modal-dialog.modal-lg').css('width', '95%');

        $('.fdate-picker').datepicker({
            autoclose: true,
            todayHighlight: true,
            forceParse: false,
        }).next().on(ace.click_event, function () {
            $(this).prev().focus();
        });        
    });

    InitDatatable();
    function InitDatatable() {

        $("#TCLMTable").dataTable({
            "bRetrieve": true,
            "bServerSide": true,
            "bScrollCollapse": true,
            "sAjaxSource": "/ThuyenChuyenLinhMuc/LoadDataThuyenChuyenLinhMuc",
            //"bProcessing": true,
            "fnServerParams": function (aoData) {
                aoData.push({ "name": "type", "value": 0 });
            },
            "oLanguage": {
                "sSearch": "Mô tả",
                "sZeroRecords": "Không có dữ liệu phù hợp",
                "sInfo": "Hiển thị từ _START_ đến _END_ trên tổng số _TOTAL_ dòng",
                "sEmptyTable": "Không có dữ liệu",
                "sInfoFiltered": " - lọc ra từ _MAX_ dòng",
                "sLengthMenu": "Hiển thị _MENU_ dòng",
                "sProcessing": "Đang xử lý...",
                "sInfoEmpty": "",
                "oPaginate": {
                    "sPrevious": "Trước",
                    "sNext": "Sau"
                }
            },
            "aoColumnDefs": [
                {
                    "aTargets": [0, 1],
                    "bVisible": false,
                },
                {
                    "aTargets": [1],
                    "render": function (data, type, full, meta) {
                        var content = '<label class="position-relative">' +
                            '<input type="checkbox" class="ace" value="' + data + '"/>' +
                            '<span class="lbl"></span> </label>';
                        return content;
                    },
                    "bSortable": false
                },
                {
                    "aTargets": [7],
                    "render": function (data, type, full, meta) {
                        var content = '<button class="btn btn-minier btn-primary" style="margin-right:2px;" onclick="LoadTCLMById(' + data + ')"><i class="ace-icon fa fa-pencil"></i>Sửa</button>' +
                            '<button class="btn btn-minier btn-danger" onclick="DeleteTCLMConfirm(' + data + ')">' + '<i class="ace-icon fa fa-trash-o"></i>Xóa</button>';
                        return content;
                    },
                    "bSortable": false
                }
            ],
            "bAutoWidth": false,
        });
    }

    $("#ngayQuyetDinh").change(function () {
        var date = $("#ngayQuyetDinh").val();
        var t = date.split("/");
        if (t.length == 3) {
            $("#moTa").val("Đợt thuyên chuyển ngày " + t[0] + " tháng " + t[1] + " năm " + t[2]);
        } else if (t.length == 2) {
            $("#moTa").val("Đợt thuyên chuyển tháng " + t[0] + " năm " + t[1]);
        } else if (t.length == 1) {
            $("#moTa").val("Đợt thuyên chuyển năm " + t[0]);
        }
    });

    $("#btnTaoThuyenChuyen").click(function () {                      
        idTCLM = 0;
        $("#titleModal").html("Thêm mới đợt thuyên chuyển Linh Mục");
        $("#createTCLMModal").modal('show');
        $("#btnCreateTCLMModal").show();
        $("#btnUpdateTCLMModal").hide();        
    });

    $("#btnCloseTCLMModal").click(function() {
        $("#createTCLMModal").modal('hide');
        ClearTCLM();
        refeshTable("TCLMTable");
    });

    function LoadTCLMById(id) {
        idTCLM = id;
        startLoading();
        $.ajax({
            url: "/ThuyenChuyenLinhMuc/LoadTCLMById",
            type: "POST",
            data: { id: id },
            success: function (data) {
                var item = data.result;
                if (item) {
                    $("#ngayQuyetDinh").val(item.NgayQuyetDinh);
                    $("#nguoiQuyetDinh").val(item.NguoiQuyetDinh);
                    $("#moTa").val(item.MoTa);
                    $("#ngayHieuLuc").val(item.NgayHieuLuc);

                    $("#titleModal").html("Chỉnh sửa đợt thuyên chuyển Linh Mục");
                    $("#btnCreateTCLMModal").hide();
                    $("#btnUpdateTCLMModal").show();
                    LoadParishManagerByTCLM(id);
                }
                else {
                    showMessage("Tải dữ liệu thất bại", 0);
                }

            },
        });
    }

    function LoadParishManagerByTCLM(id) {
        $.ajax({
            url: "/ThuyenChuyenLinhMuc/LoadParishManagerByTCLM",
            type: "POST",
            data: {
                idTCLM: id,
            },
            success: function (data) {
                $("#parishManagerTable").dataTable().fnDestroy();
                $("#parishManagerTable > tbody").html(data);
                InitParishManagerDatatables("parishManagerTable");
                //checkInvalidParticipants();
                //multiCheck();               
                $("#createTCLMModal").modal('show');
            },
        });
    }

    function InitParishManagerDatatables(id) {

        $("#" + id).dataTable({
            "aaSorting": [],
            "oLanguage": {
                "sSearch": "Linh mục/Giáo xứ",
                "sZeroRecords": "Không có dữ liệu phù hợp",
                "sInfo": "Hiển thị từ _START_ đến _END_ trên tổng số _TOTAL_ dòng",
                "sEmptyTable": "Không có dữ liệu",
                "sInfoFiltered": " - lọc ra từ _MAX_ dòng",
                "sLengthMenu": "Hiển thị _MENU_ dòng",
                "sProcessing": "Đang xử lý...",
                "sInfoEmpty": "",
                "oPaginate": {
                    "sPrevious": "Trước",
                    "sNext": "Sau"
                }                
            },
            "aoColumnDefs": [
                {
                    "aTargets": [1],
                    "render": function (data, type, full, meta) {
                        var content = '<label class="position-relative">' +
                            '<input type="checkbox" class="ace sItem" value="' + data + '"/>' +
                            '<span class="lbl"></span> </label>';
                        return content;
                    },
                    "bSortable": false,
                    "sWidth": "4%"
                },
                {
                    "aTargets": [2],
                    "sWidth": "11%"
                },
                {
                    "aTargets": [3],
                    "sWidth": "14%"
                },
                {
                    "aTargets": [4],
                    "sWidth": "10%"
                },
                {
                    "aTargets": [5],
                    "sWidth": "7%"
                },
                {
                    "aTargets": [6],
                    "sWidth": "10%"
                },
                {
                    "aTargets": [7],
                    "sWidth": "11%"
                },
                {
                    "aTargets": [8],
                    "sWidth": "13%"
                },
                {
                    "aTargets": [9],
                    "sWidth": "9%"
                },
                {
                    "aTargets": [10],
                    "sWidth": "11%",
                    "bSortable": false
                }
            ],
            "bAutoWidth": false,

        });

    }

    function ClearTCLM() {
        idTCLM = 0;
        $("#parishManagerTable").dataTable().fnDestroy();
        $("#parishManagerTable tbody").html("");

        $("#ngayQuyetDinh").val('');
        $("#nguoiQuyetDinh").val('');
        $("#moTa").val('');
        $("#ngayHieuLuc").val('');

        $("#lbNgayQuyetDinhErrorMessage").val("");
        $("#lbNgayQuyetDinhErrorMessage").hide();
        $("#lbMoTaErrorMessage").val("");
        $("#lbMoTaErrorMessage").hide();
        $("#lbNguoiQuyetDinhErrorMessage").val("");
        $("#lbNguoiQuyetDinhErrorMessage").hide();
        $("#lbNgayHieuLucErrorMessage").val("");
        $("#lbNgayHieuLucErrorMessage").hide();
    }

    function CheckValidTCLM() {
        var ngayQuyetDinh = $("#ngayQuyetDinh").val();
        var moTa = $("#moTa").val();
        var nguoiQuyetDinh = $("#nguoiQuyetDinh").val();
        var ngayHieuLuc = $("#ngayHieuLuc").val();
        var isError = false;


        if (!ngayQuyetDinh) {
            $("#lbNgayQuyetDinhErrorMessage").html("Vui lòng nhập ngày quyết định");
            $("#lbNgayQuyetDinhErrorMessage").show();
            isError = true;
        } else {
            $("#lbNgayQuyetDinhErrorMessage").hide();
            $("#lbNgayQuyetDinhErrorMessage").html("");
        }

        //if (!checkExistedSacramentGroup()) {
        //    isError = true;
        //}

        if (!moTa) {
            $("#lbMoTaErrorMessage").html("Vui lòng nhập mô tả");
            $("#lbMoTaErrorMessage").show();

            isError = true;
        } else {
            $("#lbMoTaErrorMessage").hide();
            $("#lbMoTaErrorMessage").html("");
        }

        if (!nguoiQuyetDinh) {
            $("#lbNguoiQuyetDinhErrorMessage").html("Vui lòng nhập người quyết định");
            $("#lbNguoiQuyetDinhErrorMessage").show();

            isError = true;
        } else {
            $("#lbNguoiQuyetDinhErrorMessage").hide();
            $("#lbNguoiQuyetDinhErrorMessage").html("");
        }

        if (!ngayHieuLuc) {
            $("#lbNgayHieuLucErrorMessage").html("Vui lòng nhập ngày hiệu lực");
            $("#lbNgayHieuLucErrorMessage").show();

            isError = true;
        } else {
            $("#lbNgayHieuLucErrorMessage").hide();
            $("#lbNgayHieuLucErrorMessage").html("");
        }

