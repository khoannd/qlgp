        if (!birthdate) {
            $("#lbErrorBirthdate").html("Vui lòng nhập ngày tháng năm sinh của linh mục");
            $("#lbErrorBirthdate").show();
            isError = true;
        } else {
            $("#lbErrorBirthdate").hide();
            $("#lbErrorBirthdate").html("");
        }

        if (!checkYearOldPriest()) {
            isError = true;
        }

        if (isError) {
            return false;
        }
        return true;

    }

    function checkYearOldPriest() {
        var date = $("#txtBirthDate").val();
