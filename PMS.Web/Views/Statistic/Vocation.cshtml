                    <div class="input-group">
                        <input class="form-control date-picker" id="birthDate" type="text" data-date-format="dd/mm/yyyy" placeholder="" />
                        <span class="input-group-addon">
                            <i class="fa fa-calendar bigger-110"></i>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-6 col-xs-offset-6">
