                        <button class="btn btn-minier btn-primary">
                            <i class="ace-icon fa fa-search-plus"></i>
                            Chi tiết
                        </button>
                    </td>
                </tr>

                <tr>
                    <td></td>
                    <td>
                        <label class="position-relative">
                            <input type="checkbox" class="ace" />
                            <span class="lbl"></span>
                        </label>
                    </td>
