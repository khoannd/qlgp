        $("#txtGender").val("");
        $("#txtBirthDate").val("");
        $("#txtBirthPlace").val("");
        $("#txtFatherName").val("");
        $("#txtMotherName").val("");

        //refresh datatable
        //$("#donationTable").dataTable().fnDestroy();
        //$("#donationTable tbody").html("");

    }

    function InitDatatable() {

        $("#donationTable").dataTable({
            "bRetrieve": true,
            "bServerSide": true,
            "bSCrollCollapse": true,
            "sAjaxSource": "/Donation/LoadAllDonation",
            "oLanguage": {
                "sSearch": "Tên giáo dân",
                "sZeroRecords": "Không có dữ liệu phù hợp",
                "sInfo": "Hiển thị từ _START_ đến _END_ trên tổng số _TOTAL_ dòng",
                "sEmptyTable": "Không có dữ liệu",
                "sInfoFiltered": " - lọc ra từ _MAX_ dòng",
                "sLengthMenu": "Hiển thị _MENU_ dòng",
                "sProcessing": "Đang xử lý...",
                "sInfoEmpty": "",
                "oPaginate": {
                    "sPrevious": "Trước",
                    "sNext": "Sau"
                }
            },
            "aoColumnDefs": [
                {
                    "aTargets": [0],
                    "bVisible": false,
                },
                {
                    "aTargets": [1],
                    "render": function (data, type, full, meta) {
                        var content = '<label class="position-relative">' +
                                      '<input type="checkbox" class="ace" value="' + data + '"/>' +
                                      '<span class="lbl"></span> </label>';
                        return content;
                    },
                    "bVisible": false,
                    "bSortable": false,
                },
                      {
                          "aTargets": [6],
                          "render": function (data, type, full, meta) {
                              var content = '<button class="btn btn-minier btn-primary" onclick="LoadDonationByID(' + data + ')"><i class="ace-icon fa fa-pencil"></i>Sửa</button>' +
                                    '<button class="btn btn-minier btn-danger" onclick="DeleteConfirm(' + data + ')">' + '<i class="ace-icon fa fa-trash-o"></i>Xóa</button>';
                              return content;
                          },
                          "bSortable": false,
                          "sWidth": "15%"
                      }
            ],
            "bAutoWidth": false,
        });
    }

    //Data Handle
    function prepareAddSession() {
        var currency = $("#cbbCurrency").val();
        var valueOfMoney = $("#txtValue").val();
        var rate = $("#txtRate").val();
        var donationDate = $("#txtDonationDate").val();
        var isReceipt = $("#cbIsReceipt");
        var dateReceipt = $("#txtReceiptDate");
        var isError = false;
        //USD
        if (currency == 0) {
            $("#lbCurrency").html("Chọn loại tiền");
            $("#lbCurrency").show();
            isError = true;
        } else if (currency == 1) {
            $("#lbCurrency").html("");
            if (!rate) {
                $("#lbRateError").html("Nhập tỉ giá");
                $("#lbRateError").show();
                isError = true;
            } else {
                $("#lbRateError").html("");
                $("#lbRateError").hide();
                isError = false;
            }
        } else {
            $("#lbCurrency").html("");
            $("#lbCurrency").hide();
            isError = false;
        }

        if (!donationDate) {
            $("#lbDonationDateError").html("Nhập ngày quyên góp");
            $("#lbDonationDateError").show();
            isError = true;
        } else {
            $("#lbDonationDateError").html("");
            $("#lbDonationDateError").hide();
            isError = false;
        }

        if (!valueOfMoney) {
            $("#lbValueError").html("Nhập số tiền quyên góp");
            $("#lbValueError").show();
            isError = true;
        } else {
            $("#lbValueError").html("");
            $("#lbValueError").hide();
            isError = false;
        }

        if (isReceipt.is(":checked")) {
            if (!dateReceipt) {
                $("#lbReceiptDateError").html("Nhập ngày in giấy chứng nhận");
                $("#lbReceiptDateError").show();
                isError = true;
            } else {
                $("#lbReceiptDateError").html("");
                $("#lbReceiptDateError").hide();
                isError = false;
            }
        }

        if (isError) {
            return false;
        }

        return true;
    }

    function checkRate() {
        var isError = false;
        var rate = $("#txtRate").val();
        if (!rate) {
            isError = true;
        }
        if (isError) {
            return false;
        }

        return true;
    }

    function AddSession() {
        //Validation
        if (!prepareAddSession()) {
            return;
        }
        if (!checkRate()) {
            $("#txtRate").val(1);
        }
        var id = 0;
        //Get Data From Input
        startLoading();
        $.ajax({
            url: "/Donation/AddDonation",
            async: false,
            data: {
                //Session
                DonationDate: $("#txtDonationDate").val(),
                Note: $("#txtNote").val(),
                DonationID: $("#idDonation").val(),
                Type: $("#cbbCurrency").val(),
                InputValue: $("#txtValue").val(),
                ExchangeRate: $("#txtRate").val(),

                //Donation
                ParishionerID: $("#idParishioner").val(),

            },
            success: function (data) {
                if (data <= 0) {
                    if (data == -1) {
                        showMessage("Thêm mới quyên góp thất bại", 0);
                    }
                } else {
                    showMessage("Thêm mới thành công", 1);
                }
            },
        });
        return id;
    }


