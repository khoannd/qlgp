<script>
    InitDatatable();

    //Set Config
    $(function () {
        $('#donationModal').find('.modal-dialog.modal-lg').css('width', '60%');
        $('#sessionModal').find('.modal-dialog.modal-lg').css('width', '60%');
    });

    //Button event

    $("#cbIsReceipt").change(function () {
        if ($(this).is(":checked")) {
            $("#ReceiptDate").attr('hidden', false);
        } else {
            $("#ReceiptDate").attr('hidden', true);
            $("#txtReceiptDate").val("");
        }
    });


    $("#cbbCurrency").change(function () {
        if ((this.value) == 1) {
            $("#ExchangeRate").attr('hidden', false);
        } else {
            $("#ExchangeRate").attr('hidden', true);
            $("#txtRate").val("");
        }
    });

    $("#btnCreateDonation").click(function () {
        $("#donationModal").modal('show');
        $("#btnUpdateDonation").hide();

    });

    $("#btnAddSession").click(function () {
        AddSession();
    });

    $("#btnAddDonation").click(function () {
        $("#sessionModal").modal('show');
        $("#btnUpdateSession").hide();
    });

    $("#btnCloseDonationModal").click(function () {

        $("#donationModal").modal('hide');
        ClearDonationModal();
        refeshTable("donationTable");
    });

    $("#btnCloseSessionModal").click(function () {

        $("#sessionModal").modal('hide');
        //ClearSessionModal();
        refeshTable("donationTable");
    });


    //
    function refeshTable(tableName) {
        updateTableContent(tableName);
    }

    autocomplete("#txtParishionerName",
        "/Parishioner/LoadParishionerByName",
        function (item) {
            $("#txtParishionerName").val(item.Name);
            $("#idParishioner").val(item.Id);
            $("#txtChristianName").val(item.ChristianName);
            $("#txtParishionerCode").val(item.Code);
            $("#txtParishionerCommunity").val(item.CommunityName);
            $("#txtPhoneNumber").val(item.Phone);
            $("#txtGender").val(item.Gender);
            $("#txtBirthDate").val(item.BirthDate);
            $("#txtBirthPlace").val(item.BirthPlace);
            $("#txtFatherName").val(item.FatherName);
            $("#txtMotherName").val(item.MotherName );
    });

    //Datatable handle
    function ClearDonationModal() {
        $("#txtParishionerName").val("");
        $("#idParishioner").val(0);
        $("#txtChristianName").val("");
        $("#txtParishionerCode").val("");
        $("#txtParishionerCommunity").val("");
