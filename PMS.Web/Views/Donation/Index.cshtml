    function prepareAddDonation() {
        var isError = false;
        if ($("#donationHistoryTable tbody").html() == "") {
            $("#lbNeedSessionError").html("Hãy thêm quyên góp");
            $("#lbNeedSessionError").show();
            isError = true;
        }
        else
            $("#lbNeedSessionError").hide();

        if (isError) {
            return false;
        }

        return true;
    }

    function prepareAddSession() {
        var currency = $("#cbbCurrency").val();
        var valueOfMoney = $("#txtValue").val().replace(',', '');
        var rate = $("#txtRate").val();
        var donationDate = $("#txtDonationDate").val();
        var isReceipt = $("#cbIsReceipt");
        var dateReceipt = $("#txtReceiptDate");
        var isError = false;
        //USD
        if (currency == 0) {
            $("#lbCurrency").html("Chọn loại tiền");
            $("#lbCurrency").show();
            isError = true;
        } else if (currency == 1) {
            $("#lbCurrency").html("");
            if (!rate) {
                $("#lbRateError").html("Nhập tỉ giá");
                $("#lbRateError").show();
                isError = true;
            } else {
                $("#lbRateError").html("");
                $("#lbRateError").hide();
                isError = false;
            }
        } else {
            $("#lbCurrency").html("");
            $("#lbCurrency").hide();
            isError = false;
        }

        if (!donationDate) {
            $("#lbDonationDateError").html("Nhập ngày quyên góp");
            $("#lbDonationDateError").show();
            isError = true;
        } else {
            $("#lbDonationDateError").html("");
            $("#lbDonationDateError").hide();
            isError = false;
        }

        if (!valueOfMoney) {
            $("#lbValueError").html("Nhập số tiền quyên góp");
            $("#lbValueError").show();
            isError = true;
        } else {
            $("#lbValueError").html("");
            $("#lbValueError").hide();
            isError = false;
        }

        if (isReceipt.is(":checked")) {
            if (!dateReceipt) {
                $("#lbReceiptDateError").html("Nhập ngày in giấy chứng nhận");
                $("#lbReceiptDateError").show();
                isError = true;
            } else {
                $("#lbReceiptDateError").html("");
                $("#lbReceiptDateError").hide();
                isError = false;
            }
        }

        if (isError) {
            return false;
        }

        return true;
    }

    function checkRate() {
        var isError = false;
        var rate = $("#txtRate").val();
        if (!rate) {
            isError = true;
        }
        if (isError) {
            return false;
        }

        return true;
    }

    function AddSession() {
        //Validation
        if (!prepareAddSession()) {
            return;
        }
        if (!checkRate()) {
            $("#txtRate").val(1);
        }
        var id = 0;
        //Get Data From Input
        startLoading();
        $.ajax({
            url: "/Donation/AddDonationDetail",
            async: false,
            data: {
                //Session
                donationDate: $("#txtDonationDate").val(),
                note: $("#txtNote").val(),
                donationId: $("#idDonation").val(),
                type: $("#cbbCurrency").val(),
                inputValue: $("#txtValue").val().toString().split(',').join(''),
                exchangeRate: $("#txtRate").val(),

                //Donation
                parishionerID: $("#idParishioner").val(),

            },
            success: function (data) {
                if (data <= 0) {
                    if (data == -1) {
                        showMessage("Thêm mới quyên góp thất bại", 0);
                    }
                } else {
                    showMessage("Thêm mới thành công", 1);
                    $("#sessionModal").modal('hide');
                    if ($("#idDonation").val() == 0) {
                        $("#idDonation").val(data);
                        LoadDanationHistory(data);
                    }
                    else
                        refeshTable("donationHistoryTable");
                }
            },
        });
        return id;
    }

    function showUpdateSession(sessionId) {
        startLoading();
        $.ajax({
            url: "/Donation/GetSessionDetail",
            async: false,
            data: {
                //Session
