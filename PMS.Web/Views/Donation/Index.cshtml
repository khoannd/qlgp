<script>
    InitDatatable();

    //Set Config
    $(function () {
        $('#donationModal').find('.modal-dialog.modal-lg').css('width', '80%');
        $('#sessionModal').find('.modal-dialog.modal-lg').css('width', '70%');
        //$("#txtValue").inputmask('Regex', {regex: "^[0-9]{1,6}(\\.\\d{1,2})?$"});
        //$("#txtValue").mask('000.000.000.000.000,00', {reverse: true});

    });

    $("#txtValue").keydown(function (e) {
        // Allow: backspace, delete, tab, escape, enter and .
        if ($.inArray(e.keyCode, [46, 8, 9, 27, 13, 110, 190]) !== -1 ||
            // Allow: Ctrl+A, Command+A
            (e.keyCode === 65 && (e.ctrlKey === true || e.metaKey === true)) ||
            // Allow: home, end, left, right, down, up
            (e.keyCode >= 35 && e.keyCode <= 40)) {
            // let it happen, don't do anything
            return;
        }
        // Ensure that it is a number and stop the keypress
        if ((e.shiftKey || (e.keyCode < 48 || e.keyCode > 57)) && (e.keyCode < 96 || e.keyCode > 105)) {
            e.preventDefault();
        }
    });

    $("#txtValue").keyup(function (e) {
        if (// Allow: Ctrl+A, Command+A
            (e.keyCode === 65 && (e.ctrlKey === true || e.metaKey === true)) ||
            // Allow: home, end, left, right, down, up
            (e.keyCode >= 35 && e.keyCode <= 40)) {
            // let it happen, don't do anything
            return;
        }
        $("#txtValue").val(numberWithCommas($("#txtValue").val()));
    });

    $("#cbIsReceipt").change(function () {
        if ($(this).is(":checked")) {
            $("#ReceiptDate").attr('hidden', false);
        } else {
            $("#ReceiptDate").attr('hidden', true);
            $("#txtReceiptDate").val("");
        }
    });


    $("#cbbCurrency").change(function () {
        if ((this.value) == 1) {
            $("#ExchangeRate").attr('hidden', false);
        } else {
            $("#ExchangeRate").attr('hidden', true);
            $("#txtRate").val("");
        }
    });

    $("#btnCreateDonation").click(function () {
        ClearDonationModal();
        $("#donationModal").modal('show');
        $("#btnUpdateDonation").hide();

    });

    $("#btnAddSession").click(function () {
        AddSession();
    });

    $("#btnUpdateSession").click(function () {
        UpdateSession();
    });

    $("#btnShowAddSession").click(function () {
        if (!validateDonationForm()) {
            return
        }

        ClearSessionModal();
        $("#sessionModal").modal('show');
        $("#btnUpdateSession").hide();
    });

    $("#btnCloseDonationModal").click(function () {

        $("#donationModal").modal('hide');
        ClearDonationModal();
        refeshTable("donationTable");
    });

    $("#btnCloseSessionModal").click(function () {

        $("#sessionModal").modal('hide');
        //ClearSessionModal();
        refeshTable("donationTable");
    });


    //

    function validateDonationForm() {
        var parishionerName = $("#txtParishionerName").val();

        var isError = false;
        if (!parishionerName) {
            $("#lbParishionerNameError").html("Vui lòng nhập thông tin người quyên góp");
            $("#lbParishionerNameError").show();
            isError = true;
        } else {
            $("#lbParishionerNameError").html("");
            $("#lbParishionerNameError").hide();
            isError = false;
        }

        if (isError) {
            return false;
        }

        return true;
    }

    function refeshTable(tableName) {
        updateTableContent(tableName);
    }

    autocomplete("#txtParishionerName",
        "/Parishioner/LoadParishionerByName",
        function (item) {
            $("#txtParishionerName").val(item.Name);
            $("#idParishioner").val(item.Id);
            $("#txtChristianName").val(item.ChristianName);
            $("#txtParishionerCode").val(item.Code);
            $("#txtParishionerCommunity").val(item.CommunityName);
            $("#txtPhoneNumber").val(item.Phone);
            if (item.Gender == 1)
                $("#txtGender").val("Nam");
            else $("#txtGender").val("Nữ");
            $("#txtBirthDate").val(item.BirthDate);
            $("#txtBirthPlace").val(item.BirthPlace);
            $("#txtFatherName").val(item.FatherName);
            $("#txtMotherName").val(item.MotherName);
            $("#btnUpdateDonation").show();
        });

    //Datatable handle
    function ClearDonationModal() {
        $("#txtParishionerName").val("");
        $("#idParishioner").val(0);
        $("#idDonation").val(0);
        $("#txtChristianName").val("");
        $("#txtParishionerCode").val("");
        $("#txtParishionerCommunity").val("");
        $("#txtPhoneNumber").val("");
        $("#txtGender").val("");
        $("#txtBirthDate").val("");
        $("#txtBirthPlace").val("");
        $("#txtFatherName").val("");
        $("#txtMotherName").val("");

        //refresh datatable
        $("#donationHistoryTable").dataTable().fnDestroy();
        $("#donationHistoryTable tbody").html("");

    }

    function ClearSessionModal() {
        var now = new Date();
        $("#txtDonationDate").val(convertDateObjectToString(now));
        $("#cbbCurrency").val(2);
        $("#txtNote").val('');

        $("#txtValue").val('');
        $("#txtRate").val('');
