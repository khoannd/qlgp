@{
    ViewBag.Title = "Index";
}
<input id="communityId" type="hidden" value="0" />
<input id="divisionId" type="hidden" value="" />
<div class="page-header">
    <h1>Danh sách giáo họ</h1>
</div>
<div class="container-fluid">
    <button id="btnCreateCommunity" class="btn btn-success" data-toggle="modal">
        <i class="ace-icon fa fa-plus"></i> Thêm giáo họ
    </button>
</div>
<div class="col-xs-12">
    <div class="space-6"></div>
    <table id="communityTable" class="table table-hover">
        <thead>
            <tr>
                <th></th>
                <th>
                    <label class="position-relative">
                        <input type="checkbox" class="ace" />
                        <span class="lbl"></span>
                    </label>
                </th>
                <th>Tên giáo họ</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>

</div>
<div class="clearfix"></div>
<!--Community Modal-->
<div id="createCommunityModal" class="modal fade" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="widget-box transparent">
                <div class="widget-header center">
           
                        <h4 class="widget-title lighter" id="communityModalTitle">Thêm mới giáo họ</h4>
                        <div class="widget-toolbar no-border">
                            <a href="#" onclick="$('#btnCloseCommunityModal').click()">
                                <i class="ace-icon fa fa-times"></i>
                            </a>
                        </div>
             
                </div>
                <div class="widget-body">
                    <div class="space-10"></div>
                    <div class="col-sm-offset-2 col-sm-8 col-sm-offset-2">
                        <div class="row">
          
                            <div class="form-group">
                                <label class="col-sm-3 control-label no-padding-right">Tên giáo họ&nbsp;(<span style="color: red">*</span>)</label>
                                <div class="col-sm-9">
                                    <input type="text" id="txtCommunityName" value="" class="form-control">
                                    <label class="text-danger" id="lbCommunityNameError" hidden=""></label>
                                </div>
                            </div>                   
                        </div>                                              
                    </div>
                    <div id="optionalDivision" hidden="">
                        <div class="col-xs-12">
                            <div class="space-10"></div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <h4 class="page-header col-sm-12" style="color: #4383b4">Danh sách giáo khu</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <div class="col-sm-12">
                                            <button id="btnAddDivisionModal" class="btn btn-success btn-sm" data-toggle="modal">
                                                <i class=" ace-icon fa fa-plus">
                                                </i> Thêm giáo khu
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="form-group">
                                        <div class="col-sm-12">
                                            <div class="space-8"></div>
                                            <table id="tblDivisionTable" class="table table-hover">
                                                <thead>
                                                    <tr>
                                                        <th></th>
                                                        <th>
                                                            <label class="position-relative">
                                                                <input type="checkbox" class="ace" />
                                                                <span class="lbl"></span>
                                                            </label>
                                                        </th>
                                                        <th>Tên giáo khu</th>
                                                        <th>Thao tác</th>
                                                    </tr>
                                                </thead>
                                                <tbody></tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>                   

                    <div class="row">
                        <div class="col-xs-12">
                            <div class="col-xs-12 col-sm-12">
                                <div class="align-right">
                                    <div class="space-6"></div>
                                    <button id="btnCreateCommunityModal" class="btn btn-primary" data-toggle="modal">
                                        <i class="ace-icon fa fa-save"></i> Lưu
                                    </button>
                                    <button id="btnUpdateCommunityModal" class="btn btn-primary" data-toggle="modal">
                                        <i class="ace-icon fa fa-save"></i> Cập Nhật
                                    </button>
                                    <button id="btnCloseCommunityModal" class="btn btn-grey" data-toggle="modal">
                                        <i class="ace-icon fa fa-times"></i> Đóng
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="space-6"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--End Community Modal-->
<!--Division Modal-->
<div id="createDivisionModal" class="modal fade" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="widget-box transparent">
                <div class="widget-header center">
                    <div class="col-xs-12">
                        <h4 class="widget-title lighter" id="divisionModalTitle">Thêm mới giáo khu</h4>
                    </div>
                </div>
                <div class="widget-body">
                    <div class="space-10"></div>
                    <div class="row">
                        <div class="col-sm-offset-2 col-sm-8 col-sm-offset-2">
                            <div class="form-group">
                                <label class="col-sm-3 control-label no-padding-right">Tên giáo khu&nbsp;(<span style="color: red">*</span>)</label>
                                <div class="col-sm-9">
                                    <input type="text" id="txtDivisionName" value="" class="form-control">
                                    <label class="text-danger" id="lbDivisionNameError" hidden=""></label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="space-10"></div>
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="col-xs-12 col-sm-12">
                                <div class="align-right">
                                    <button id="btnCreateDivisionModal" class="btn btn-primary" data-toggle="modal">
                                        <i class="ace-icon fa fa-save"></i> Lưu
                                    </button>
                                    <button id="btnUpdateDivisionModal" class="btn btn-primary" data-toggle="modal">
                                        <i class="ace-icon fa fa-save"></i> Cập Nhật
                                    </button>
                                    <button id="btnCloseDivisionModal" class="btn btn-grey" data-toggle="modal">
                                        <i class="ace-icon fa fa-times"></i> Đóng
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="space-6"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    InitDatatable();

    function InitDatatable() {
        $("#communityTable").dataTable({
            "bRetrieve": true,
            "bServerSide": true,
            "bScrollCollapse": true,
            "sAjaxSource": "/Community/LoadCommunityDatatable",
            //"bProcessing": true,
            "oLanguage": {
                "sSearch": "Tên giáo họ",
                "sZeroRecords": "Không có dữ liệu phù hợp",
                "sInfo": "Hiển thị từ _START_ đến _END_ trên tổng số _TOTAL_ dòng",
                "sEmptyTable": "Không có dữ liệu",
                "sInfoFiltered": " - lọc ra từ _MAX_ dòng",
                "sLengthMenu": "Hiển thị _MENU_ dòng",
                "sProcessing": "Đang xử lý...",
                "sInfoEmpty": "",
                "oPaginate": {
                    "sPrevious": "Trước",
                    "sNext": "Sau"
                }
            },
            "aoColumnDefs": [
                {
                    "aTargets": [0, 1],
                    "bVisible": false,
                },
                {
                    "aTargets": [1],
                    "render": function (data, type, full, meta) {
                        var content = '<label class="position-relative">' +
                            '<input type="checkbox" class="ace" value="' + data + '"/>' +
                            '<span class="lbl"></span> </label>';
                        return content;
                    },
                    "bSortable": false
                },
                {
                    "aTargets": [3],
                    "render": function (data, type, full, meta) {
                        var content = '<button class="btn btn-minier btn-primary" onclick="LoadCommunityById(' + data + ')"><i class="ace-icon fa fa-pencil"></i>Sửa</button>' +
                            '<button class="btn btn-minier btn-danger" onclick="DeleteConfirm(' + data + ')">' + '<i class="ace-icon fa fa-trash-o"></i>Xóa</button>';
                        return content;
                    },
                    "bSortable": false,
                    "sWidth": "20%"
                }
            ],
            "bAutoWidth": false,
        });

    }

    //Division Table
    InitDivisionDatatable();

    function InitDivisionDatatable() {
        $("#tblDivisionTable").dataTable({
            "bRetrieve": true,
            "bServerSide": true,
            "bScrollCollapse": true,
            "sAjaxSource": "/Community/LoadDivisionDatatable",
            "bProcessing": false,
            "fnServerParams": function (aoData) {
                aoData.push({ "name": "communityId", "value": $("#communityId").val() });
            },
            //"bProcessing": true,
            "oLanguage": {
                "sSearch": "Tên giáo khu",
                "sZeroRecords": "Không có dữ liệu phù hợp",
                "sInfo": "Hiển thị từ _START_ đến _END_ trên tổng số _TOTAL_ dòng",
                "sEmptyTable": "Không có dữ liệu",
                "sInfoFiltered": " - lọc ra từ _MAX_ dòng",
                "sLengthMenu": "Hiển thị _MENU_ dòng",
                "sProcessing": "Đang xử lý...",
                "sInfoEmpty": "",
                "oPaginate": {
                    "sPrevious": "Trước",
                    "sNext": "Sau"
                }
            },
            "aoColumnDefs": [
                {
                    "aTargets": [0, 1],
                    "bVisible": false,
                },
                {
                    "aTargets": [1],
                    "render": function (data, type, full, meta) {
                        var content = '<label class="position-relative">' +
                            '<input type="checkbox" class="ace" value="' + data + '"/>' +
                            '<span class="lbl"></span> </label>';
                        return content;
                    },
                    "bSortable": false
                },
                {
                    "aTargets": [3],
                    "render": function (data, type, full, meta) {
                        var content = '<button class="btn btn-minier btn-primary" onclick="LoadDivisionById(' + data + ')"><i class="ace-icon fa fa-pencil"></i>Sửa</button>' +
                            '<button class="btn btn-minier btn-danger" onclick="DeleteDivisionConfirm(' + data + ')">' + '<i class="ace-icon fa fa-trash-o"></i>Xóa</button>';
                        return content;
                    },
                    "bSortable": false,
                    "sWidth": "20%"
                }
            ],
            "bAutoWidth": false,
        });

    }

    function refeshTable() {
        updateTableContent("communityTable");
        //$("#communityTable").dataTable()._fnAjaxUpdate();
    }

    function refeshDivisionTable() {
        updateTableContent("tblDivisionTable");
        //$("#tblDivisionTable").dataTable()._fnAjaxUpdate();
    }

    $(document).on('click', 'th input:checkbox', function () {
        var that = this;
        $(this).closest('table').find('tr > td:first-child input:checkbox')
            .each(function () {
                this.checked = that.checked;
                $(this).closest('tr').toggleClass('selected');
            });
    });
    $("#btnCreateCommunity").click(function () {
        $("#communityModalTitle").html("Thêm mới giáo họ");
        $("#createCommunityModal").modal('show');
        $("#btnCreateCommunityModal").show();
        $("#btnUpdateCommunityModal").hide();
    });
    $("#btnAddDivisionModal").click(function () {
        $("#divisionModalTitle").html("Thêm mới giáo khu");
        $("#createDivisionModal").modal('show');
        $("#btnCreateDivisionModal").show();
        $("#btnUpdateDivisionModal").hide();
    });
    $("#btnCloseCommunityModal").click(function () {
        $("#createCommunityModal").modal('hide');
        ClearCommunity();
    });
    $("#btnCloseDivisionModal").click(function () {
        $("#createDivisionModal").modal('hide');
        ClearDivision();
    });

    $("#createDivisionModal").on('show.bs.modal', function () {
        $("#createDivisionModalLoading").fadeIn();
    });

    $("#createDivisionModal").on('hidden.bs.modal', function () {
        $("#createDivisionModalLoading").fadeOut();
    });


    $("#btnCreateCommunityModal").click(function () {
        $("#communityId").val("0");
        if (!CommunityValidate()) {
            return;
        }
        AddCommunity();
        $("#createCommunityModal").modal('hide');
    });
    $("#btnUpdateCommunityModal").click(function () {
        if (!CommunityValidate()) {
            return;
        }
        UpdateCommunity();
        $("#createCommunityModal").modal('hide');
    });

    $("#btnCreateDivisionModal").click(function () {
        $("#divisionId").val("0");
        if (!DivisionValidate()) {
            return;
        }
        AddDivision();
        $("#createDivisionModal").modal('hide');
    });
    $("#btnUpdateDivisionModal").click(function () {
        if (!DivisionValidate()) {
            return;
        }
        UpdateDivision();
        $("#createDivisionModal").modal('hide');
    });

    function LoadCommunityById(id) {
        $("#optionalDivision").show();
        $("#communityId").val(id);
        $.ajax({
            url: "/Community/LoadCommunityById",
            type: "POST",
            data: { id: id },
            success: function (data) {
                var item = data.result;

                $("#txtCommunityName").val(item.Name);
                $("#communityModalTitle").html("Chỉnh sửa giáo họ");
                $("#createCommunityModal").modal('show');
                $("#btnUpdateCommunityModal").show();
                $("#btnCreateCommunityModal").hide();

            },
        });
        updateTableContent("tblDivisionTable");
        //$("#tblDivisionTable").dataTable()._fnAjaxUpdate();
    }

    function LoadDivisionById(id) {
        $("#divisionId").val(id);
        $.ajax({
            url: "/Community/LoadCommunityById",
            type: "POST",
            data: { id: id },
            success: function (data) {
                var item = data.result;

                $("#txtDivisionName").val(item.Name);
                $("#divisionModalTitle").html("Chỉnh sửa giáo khu");
                $("#createDivisionModal").modal('show');
                $("#btnUpdateDivisionModal").show();
                $("#btnCreateDivisionModal").hide();

            },
        });
    }

    function AddCommunity() {
        var name = $("#txtCommunityName").val();
        startLoading();
        $.ajax({
            url: "/Community/AddCommunity",
            type: "POST",
            data: {
                Name: name,
            },
            success: function (data) {
                if (data.result <= 0) {
                    showMessage("Thêm giáo họ thất bại, xin vui lòng thử lại sau", 0);
                } else {
                    showMessage("Thêm giáo họ thành công", 1);
                    refeshTable();
                    ClearCommunity();
                }
            },

        });
    }

    function UpdateCommunity() {
        var name = $("#txtCommunityName").val();
        var id = $("#communityId").val();
        startLoading();
        $.ajax({
            url: "/Community/UpdateCommunity",
            type: "POST",
            data: {
                Id: id,
                Name: name
            },
            success: function (data) {
                if (data.result <= 0) {
                    showMessage("Cập nhật thông tin giáo họ thất bại", 0);
                } else {
                    showMessage("Cập nhật thông tin giáo họ thành công", 1);
                    refeshTable();
                    ClearCommunity();
                }
            },

        });
    }


    function AddDivision() {
        var name = $("#txtDivisionName").val();
        var parentId = $("#communityId").val();
        startLoading();
        $.ajax({
            url: "/Community/AddDivision",
            type: "POST",
            data: {
                Name: name,
                parentId: parentId
            },
            success: function (data) {
                if (data.result <= 0) {
                    showMessage("Thêm giáo khu thất bại", 0);
                } else {
                    refeshDivisionTable();
                    ClearDivision();
                    $("#createDivisionModal").modal('hide');
                }
            },

        });
    }

    function UpdateDivision() {
        var name = $("#txtDivisionName").val();
        var id = $("#divisionId").val();
        startLoading();
        $.ajax({
            url: "/Community/UpdateDivision",
            type: "POST",
            data: {
                Id: id,
                Name: name
            },
            success: function (data) {
                if (data.result <= 0) {
                    showMessage("Cập nhật thông tin giáo khu thất bại", 0);
                } else {
                    ClearDivision();
                    refeshDivisionTable();
                    $("#createDivisionModal").modal('hide');
                    showMessage("Cập nhật thông tin giáo khu thành công", 1);

                }
            },

        });
    }

    function DeleteConfirm(id) {
        bootbox.dialog({
            closeButton: false,
            message: "Bạn có chắc muốn xóa giáo họ này không?",
            title: "Xác nhận",
            buttons: {
                danger: {
                    label: " Xóa",
                    className: "ace-icon fa fa-trash-o btn-danger",
                    callback: function () {
                        DeleteCommunity(id);
                    }
                },
                main: {
                    label: " Đóng",
                    className: "ace-icon fa fa-times btn-default",
                    callback: function () {
                    }
                }
            }
        });
    }

    function DeleteDivisionConfirm(id) {
        bootbox.dialog({
            closeButton: false,
            message: "Bạn có chắc muốn xóa giáo khu này không?",
            title: "Xác nhận",
            buttons: {
                danger: {
                    label: " Xóa",
                    className: "ace-icon fa fa-trash-o btn-danger",
                    callback: function () {
                        DeleteDivision(id);
                        setTimeout(function () {
                            makeScrollForModal();
                        }, 500);
                    }
                },
                main: {
                    label: " Đóng",
                    className: "ace-icon fa fa-times btn-default",
                    callback: function () {
                        setTimeout(function () {
                            makeScrollForModal();
                        }, 500);
                    }
                }
            }
        });
    }

    function DeleteCommunity(id) {
        startLoading()
        $.ajax({
            url: "/Community/DeleteCommunity",
            type: "POST",
            data: { id: id },
            success: function (data) {

                if (data.result <= 0) {
                    showMessage("Xóa thất bại, vui lòng xóa hết giáo dân và giáo khu(nếu có) trong giáo họ trước", 0);
                } else {
                    showMessage("Xóa thành công", 1);
                    refeshTable();
                }

            },
        });
    }

    function DeleteDivision(id) {
        $.ajax({
            url: "/Community/DeleteCommunity",
            type: "POST",
            data: { id: id },
            success: function (data) {

                if (data.result <= 0) {
                    showMessage("Xóa thất bại, vui lòng xóa giáo dân trong giáo khu trước", 0);
                } else {
                    refeshDivisionTable();
                }
            },
        });
    }

    function CommunityValidate() {
        var isError = false;

        var name = $("#txtCommunityName").val();
        if (!name) {
            $("#lbCommunityNameError").html("Vui lòng nhập tên giáo họ");
            $("#lbCommunityNameError").show();
            isError = true;
        }

        if (!validateUniqueCommunityName()) {
            isError = true;
        }

        if (isError) {
            return false;
        }
        return true;
    }

    function validateUniqueCommunityName() {
        var communityId = $("#communityId").val();
        var name = $("#txtCommunityName").val();
        var result = true;
        $.ajax({
            url: "/Community/CheckUniqueCommunity",
            type: "POST",
            data: {
                communityId: communityId,
                name: name
            },
            async: false,
            success: function (data) {
                if (data.result <= 0) {
                    $("#lbCommunityNameError").html("Tên giáo họ đã tồn tại. Vui lòng nhập tên khác!");
                    $("#lbCommunityNameError").show();
                    result = false;
                } else {
                    if (!name) {
                        return true;
                    }
                    $("#lbCommunityNameError").html("");
                    $("#lbCommunityNameError").hide();
                    result = true;
                }

            },
        });

        return result;
    }

    function DivisionValidate() {
        var isError = false;

        var name = $("#txtDivisionName").val();
        if (!name) {
            $("#lbDivisionNameError").html("Vui lòng nhập tên giáo khu");
            $("#lbDivisionNameError").show();
            isError = true;
        }

        if (!validateUniqueDivisionName()) {
            isError = true;
        }

        if (isError) {
            return false;
        }
        return true;
    }

    function validateUniqueDivisionName() {
        var communityId = $("#divisionId").val();
        var name = $("#txtDivisionName").val();
        var parentId = $("#communityId").val();
        var result = true;
        $.ajax({
            url: "/Community/CheckUniqueDivision",
            type: "POST",
            data: {
                communityId: communityId,
                name: name,
                parentId: parentId
            },
            async: false,
            success: function (data) {
                if (data.result <= 0) {
                    $("#lbDivisionNameError").html("Tên giáo khu đã tồn tại. Vui lòng nhập tên khác!");
                    $("#lbDivisionNameError").show();
                    result = false;
                } else {
                    if (!name) {
                        return true;
                    }
                    $("#lbDivisionNameError").html("");
                    $("#lbDivisionNameError").hide();
                    result = true;
                }

            },
        });

        return result;
    }

    function ClearCommunity() {
        $("#txtCommunityName").val("");
        $("#lbCommunityNameError").html("");
        $("#lbCommunityNameError").hide();
        $("#optionalDivision").hide();
        $("#communityId").val("0");
        updateTableContent("tblDivisionTable");
        //$("#tblDivisionTable").dataTable()._fnAjaxUpdate();
    }

    function ClearDivision() {
        $("#txtDivisionName").val("");
        $("#lbDivisionNameError").html("");
        $("#lbDivisionNameError").hide();
    }

    $("#createDivisionModal").on('hidden.bs.modal', function () {
        makeScrollForModal();
        //-------------
        //-------------
    });
</script>
